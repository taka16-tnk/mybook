<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mybook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyBook">
        <activity android:name=".activities.UpdateActivity"
            android:parentActivityName=".activities.BookListActivity"/>
        <activity
            android:name=".activities.AddActivity"
            android:label="Add View"
            android:parentActivityName=".activities.BookListActivity" />
        <activity
            android:name=".activities.BookListActivity"
            android:label="Book list">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
    </application>

</manifest>